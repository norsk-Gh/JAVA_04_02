package com.javalec.base;

public class Main {

	public static void main(String[] args) {
		// 1~10까지의 합을 구하여 출력하고 그 합이 짝수인지 홀수인지 판단하기
		
		
		int total = 0;
		
		for(int i = 1 ; i<=10; i++) {
			total += i;

		}
		System.out.println("총 합계는 : " + total);
		System.out.println(total%2==0 ? "짝수입니다." : "홀수입니다.");
	
	
	}
		
	
}
